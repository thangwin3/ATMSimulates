@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login Page";
}
@model ATM.Simulates.Webview.Models.LoginModel
<div class="text-center">
    @{ if (string.IsNullOrEmpty(ViewBag.account))
        {
            <form action="/Account/Login" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h4>Nhập mã pin</h4>
                <input class="form-control input-lg" type="password" name="PinCode" id="ipNumber" maxlength="6">
                <span asp-validation-for="PinCode" class="text-danger"></span>
                @if (ViewBag.errmess != null)
                {
                    <span class="text-danger">@ViewBag.errmess</span>
                }
                <br />
                <button class="btn btn-primary btn-lg" type="submit" id="sendbuttonLogin">Thực Hiện</button>
            </form>
        }
    }
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>




